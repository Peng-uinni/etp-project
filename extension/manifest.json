{
  "manifest_version": 3,
  "name": "Transcript Extension",
  "version": "1.0",
  "description": "An extension to capture tab audio and transcribe it",
  "action": {
    "default_popup": "sidebar.html" 
  },
  "permissions": [
    "activeTab",
    "tabCapture",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
