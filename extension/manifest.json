{
  "manifest_version": 3,
  "name": "Transcript Extension",
  "version": "1.0",
  "description": "An extension to capture tab audio and transcribe it",
  "action": {
    "default_popup": "sidebar.html" 
  },
  "host_permissions":[
    "http://localhost:8000/extension/audio"
  ],
  "permissions": [
    "activeTab",
    "tabCapture"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
