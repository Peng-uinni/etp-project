{
  "manifest_version": 3,
  "name": "Sidebar Extension",
  "version": "1.0",
  "description": "A simple sidebar extension for Chrome",
  "action": {
    "default_popup": "sidebar.html" 
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
